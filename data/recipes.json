      {
        "id": "1",
        "title": "Traditional Doro Wat",
        "description": "Doro Wat is a spicy Ethiopian chicken stew that's perfect for special occasions. This recipe uses berbere spice blend and niter kibbeh (Ethiopian spiced butter) for authentic flavor.",
        "imageUrl": "https://images.unsplash.com/photo-1567364816519-cbc9c4ffe1eb?q=80&w=1000",
        "prepTime": 30,
        "cookTime": 90,
        "servings": 6,
        "difficulty": "medium",
        "ingredients": [
          { "id": "1", "name": "chicken legs and thighs", "amount": "2", "unit": "lbs" },
          { "id": "2", "name": "lemon juice", "amount": "2", "unit": "tbsp" },
          { "id": "3", "name": "red onions", "amount": "4", "unit": "large" },
          { "id": "4", "name": "garlic", "amount": "6", "unit": "cloves" },
          { "id": "5", "name": "ginger", "amount": "2", "unit": "inches" },
          { "id": "6", "name": "berbere spice", "amount": "1/4", "unit": "cup" },
          { "id": "7", "name": "niter kibbeh", "amount": "1/2", "unit": "cup" },
          { "id": "8", "name": "hard-boiled eggs", "amount": "6", "unit": "" },
          { "id": "9", "name": "salt", "amount": "", "unit": "to taste" }
        ],
        "steps": [
          {
            "id": "1",
            "description": "Clean the chicken and place in a bowl. Add lemon juice and let sit for 30 minutes."
          },
          {
            "id": "2",
            "description": "Finely dice the onions and cook in a dry pot on medium heat until they start to brown, about 20-25 minutes."
          },
          {
            "id": "3",
            "description": "Add minced garlic and ginger, cook for another 5 minutes until fragrant."
          },
          {
            "id": "4",
            "description": "Add berbere spice and niter kibbeh, stir well to combine. Cook for 5 minutes."
          },
          {
            "id": "5",
            "description": "Add the chicken pieces and coat well with the sauce. Add enough water to barely cover the chicken."
          },
          {
            "id": "6",
            "description": "Simmer covered for about 45 minutes, until chicken is tender and sauce has thickened."
          },
          {
            "id": "7",
            "description": "Add the hard-boiled eggs and simmer for another 10 minutes to allow the eggs to absorb the flavors."
          },
          {
            "id": "8",
            "description": "Serve hot with injera bread."
          }
        ],
